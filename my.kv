# Hugs å legge til dei nye klassene under ScreenManagement!
ScreenManagement:
	
	FrontScreen:
	MainWidget:
	KlimaScreen:
	HistorieScreen:
	SeverdigScreen:
	AnnaScreen:


<FrontScreen>:
	name: "front"


	canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'test.jpg'
    BoxLayout:
    	orientation: 'vertical'
        Label:
            text: 'ADRESSA'
            font_size: 150
            color: 0.03137, 0.32549, 0.46666666666, 1
        Button:
            text: 'Til menyen'
            color: 0.0705882, 0.4784313725, 0.75294117647, 1
            background_color: [1, 1, 1, 0]
            on_release: root.manager.current = 'main'




<MainWidget>:
	name: "main"
	
    canvas.before:
        Color:
            rgba: 0.976470588, 0.976470588, 0.976470588, 1
        Rectangle:
            pos: self.pos
            size: self.size
	
	BoxLayout:
		orientation: 'vertical'

		GridLayout:
			size: root.size
			rows: 1

			Label:
				text: "MENY"
				font_size: 150
				color: 0.0705882, 0.4784313725, 0.75294117647, 1
				
			
		GridLayout:
			size: root.size
			cols: 2

			Button:
				text: 'Klimaval'
				color: 0.0705882, 0.4784313725, 0.75294117647, 1
				background_color: [1, 1, 1, 0]
				on_press: root.manager.current = 'klima'
			Button:
				text: "Historisk"
				color: 0.0705882, 0.4784313725, 0.75294117647, 1
				background_color: [1, 1, 1, 0]
				on_press: root.manager.current = 'historisk'
			Button:
				text: "Severdigheiter"
				color: 0.0705882, 0.4784313725, 0.75294117647, 1
				background_color: [1, 1, 1, 0]
				on_press: root.manager.current = 'severdig'
			Button:
				text: "Uhm noko anna"
				color: 0.0705882, 0.4784313725, 0.75294117647, 1
				background_color: [1, 1, 1, 0]
				on_press: root.manager.current = 'anna'
				


		GridLayout:
			size: root.size
			rows: 2

			Label:

			Button:
				text: "Framskjerm"
				color: 0.0705882, 0.4784313725, 0.75294117647, 1
				background_color: [1, 1, 1, 0]
				on_press: root.manager.current = 'front'




<KlimaScreen>:
	name: "klima"
	
    canvas.before:
        Color:
            rgba: 0.976470588, 0.976470588, 0.976470588, 1
        Rectangle:
            pos: self.pos
            size: self.size

	
	BoxLayout:
		orientation: 'vertical'

		GridLayout:
			size: root.size
			rows: 1

			Label:
				text: "Klimaveljaren"
				font_size: 150
				color: 0.0705882, 0.4784313725, 0.75294117647, 1

		
		GridLayout:
			orientation: 'vertical'
			size: root.size
			cols: 4
			rows: 2

			Image:
				source: 'klimabilde/syden.jpeg'
				allow_stretch: True
				keep_ratio: False
			Image:
				source: 'klimabilde/antarktis.jpeg'
				allow_stretch: True
				keep_ratio: False
			Image:
				source: 'klimabilde/jungel.jpeg'
				allow_stretch: True
				keep_ratio: False
			Image:
				source: 'klimabilde/hav.jpeg'
				allow_stretch: True
				keep_ratio: False
			Button:
				text: 'Syden'
				color: 0.0705882, 0.4784313725, 0.75294117647, 1
				background_color: [1, 1, 1, 0.1]
				on_press: root.plays()
			Button:
				text: "Antarktis"
				color: 0.0705882, 0.4784313725, 0.75294117647, 1
				background_color: [1, 1, 1, 0.1]
				on_press: root.manager.current = 'historisk'
			Button:
				text: "Jungel"
				color: 0.0705882, 0.4784313725, 0.75294117647, 1
				background_color: [1, 1, 1, 0.1]
				on_press: root.manager.current = 'severdig'
			Button:
				text: "Hav"
				color: 0.0705882, 0.4784313725, 0.75294117647, 1
				background_color: [1, 1, 1, 0.1]
				on_press: root.manager.current = 'anna'
			
				
			
		GridLayout:
			size: root.size
			rows: 2

			Label:

			Button:
				text: "Framskjerm"
				color: 0.0705882, 0.4784313725, 0.75294117647, 1
				background_color: [1, 1, 1, 0]
				on_press: root.manager.current = 'front'


<HistorieScreen>:
	name: 'historisk'
	BoxLayout:
    	orientation: 'vertical'
        Button:
            text: 'Til menyen'
            on_press: root.manager.current = 'main'
<SeverdigScreen>:
	name: 'severdig'
	BoxLayout:
    	orientation: 'vertical'
        Button:
            text: 'Til menyen'
            on_press: root.manager.current = 'main'


<AnnaScreen>:
	name: 'anna'

	BoxLayout:
		orientation: 'vertical'

		GridLayout:
			size_hint: (1, 0.3)
			rows: 1

    	    Label:
    	        text: 'ROCKHEIM'
    	        font_size: 70

		GridLayout:
			orientation: 'vertical'
			size_hint: (1, 1)
			cols: 2
			rows: 1

			Label:
			    padding: [10, 10]
			    text: 'Det nasjonale museet for populærmusikk. Dra hit om du ønsker å lære mer om musikk, eller prøv deg som DJ, trommeslager og musikalsk kunstner selv!'
			    font_size: 18
			    text_size: self.size
			    halign: 'left'
			    valign: 'middle'

			Image:
				source: 'severdighetsbilder/rockheim.jpeg'
				allow_stretch: True
				keep_ratio: False

		GridLayout:
			orientation: 'vertical'
			size_hint: (1, 0.11)
			cols: 3
			rows: 1

	        Button:
                text: 'Tilbake til meny'
                size: root.size
                on_press: root.manager.current = 'main'
            Button:
                text: 'Finn veien!'
                size: root.size
            Button:
                text: 'Ny severdighet'
                size: root.size

